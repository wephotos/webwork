<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.github.wephotos.webwork.user.mapper.ResourceMapper">

	<resultMap id="BaseResultMap" type="com.github.wephotos.webwork.user.entity.Resource">
		<result column="id" property="id" jdbcType="INTEGER" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="type" property="type" jdbcType="INTEGER" />
		<result column="code" property="code" jdbcType="VARCHAR" />
		<result column="parent_id" property="parentId" jdbcType="INTEGER" />
		<result column="permission" property="permission" jdbcType="VARCHAR" />
		<result column="status" property="status" jdbcType="INTEGER" />
		<result column="url" property="url" jdbcType="VARCHAR" />
		<result column="icon" property="icon" jdbcType="VARCHAR" />
		<result column="sort" property="sort" jdbcType="INTEGER" />
		<result column="remark" property="remark" jdbcType="VARCHAR" />
		<result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
		<result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
	</resultMap>

	<!-- 查询最大的应用code -->
	<select id="getMaxCodeApp" resultType="java.lang.String" parameterType="java.lang.Integer">
		SELECT
		LPAD(IFNULL(MAX(CAST(SUBSTR(CODE, -3) AS SIGNED) + 1), 1), 3, 0) MAX_CODE
		FROM
		sys_resource
		WHERE
		type = 1
	</select>

	<!-- 查询最大的code -->
	<select id="getMaxCode" resultType="java.lang.String" parameterType="java.lang.Integer">
		SELECT
		LPAD(IFNULL(MAX(CAST(SUBSTR(CODE, -3) AS SIGNED) + 1), 1), 3, 0) MAX_CODE
		FROM
		sys_resource
		WHERE
		<choose>
			<when test="parentId == null">
				parent_id IS NULL
			</when>
			<otherwise>
				parent_id = #{parentId,jdbcType=INTEGER}
			</otherwise>
		</choose>
	</select>

	<!-- 获取当前层级资源最大序号 -->
	<select id="getMaxSort" parameterType="java.lang.Integer" resultType="int">
		select
		(IFNULL(MAX(sort), 0) + 1) SORT
		from
		sys_resource
		where
		parent_id = #{parentId, jdbcType=INTEGER}
	</select>

	<!--分页 -->
	<select id="pageList" resultMap="BaseResultMap">
		SELECT
		id,
		name,
		type,
		code,
		parent_id,
		permission,
		status,
		url,
		icon,
		sort,
		remark,
		create_time,
		update_time
		FROM
		sys_resource
		<where>
			<include refid="pageCond" />
		</where>
		<include refid="orderBy" />
		LIMIT #{start}, #{size}
	</select>

	<!--分页总数 -->
	<select id="pageCount" resultType="java.lang.Long">
		SELECT
		count(1)
		FROM
		sys_resource
		<where>
			<include refid="pageCond" />
		</where>
	</select>

	<!--查询条件 -->
	<sql id="pageCond">
		status > -1
		<if test="condition != null">
			<if test="condition.type != null">
				AND type = #{condition.type, jdbcType=INTEGER}
			</if>
			<if test="condition.name != null and condition.name != ''">
				AND name LIKE CONCAT('%', #{condition.name,jdbcType=VARCHAR}, '%')
			</if>
			<if test="condition.code != null and condition.code != ''">
				AND code LIKE CONCAT(#{condition.code,jdbcType=VARCHAR}, '%')
			</if>
			<if test="condition.parentId != null and condition.parentId != ''">
				AND parent_id = #{condition.parentId, jdbcType=INTEGER}
			</if>
		</if>
	</sql>

	<!-- 排序 -->
	<sql id="orderBy">
		ORDER BY
		<choose>
			<when test="sortField != null and sortField !=''">
				${sortField}
				<if test="sortOrder != null and sortOrder !=''">
					${sortOrder}
				</if>
			</when>
			<otherwise>
				sort ASC
			</otherwise>
		</choose>
	</sql>
	
	<!-- 获取角色下资源 -->
	<select id="listByRoleId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
		select
		 a.id,
		 a.name,
		 a.type,
		 a.code,
		 a.parent_id,
		 a.permission,
		 a.status,
		 a.url,
		 a.icon,
		 a.sort,
		 a.remark
		from
		  sys_resource a,
		  sys_role_resource b
		where
		  a.id = b.resource_id
		  AND
		  a.status > -1
		  AND
		  b.role_id = #{roleId, jdbcType=INTEGER}
	</select>
</mapper>