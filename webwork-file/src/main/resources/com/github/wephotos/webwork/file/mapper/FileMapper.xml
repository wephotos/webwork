<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.github.wephotos.webwork.file.mapper.FileMapper">

    <resultMap id="BaseResultMap" type="com.github.wephotos.webwork.file.entity.WebworkFile">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="file_group" property="fileGroup" jdbcType="VARCHAR"/>
        <result column="file_group_key" property="fileGroupKey" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="size" property="size" jdbcType="INTEGER"/>
        <result column="object_name" property="objectName" jdbcType="VARCHAR"/>
        <result column="content_type" property="contentType" jdbcType="VARCHAR"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>
    
    <sql id="Base_Column_List">
        id, file_group, file_group_key, name, size, 
        object_name, content_type, user_id, user_name, create_time
    </sql>
    
    <insert id="insert" parameterType="com.github.wephotos.webwork.file.entity.WebworkFile">
        insert into webwork_file(file_group, file_group_key, name, size, object_name, 
        		content_type, user_id, user_name, create_time)
        values (#{fileGroup,jdbcType=VARCHAR},#{fileGroupKey,jdbcType=VARCHAR},#{name,jdbcType=VARCHAR}, 
        		#{size,jdbcType=INTEGER},#{objectName,jdbcType=VARCHAR}, #{contentType,jdbcType=VARCHAR}, 
        		#{userId,jdbcType=INTEGER},#{userName,jdbcType=VARCHAR}, #{createTime,jdbcType=TIMESTAMP})
    </insert>

    <update id="updateByPrimaryKeySelective" parameterType="com.github.wephotos.webwork.file.entity.WebworkFile">
        update webwork_file
        <set>
            <if test="name != null">
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="size != null">
                size = #{size,jdbcType=INTEGER},
            </if>
            <if test="objectName != null">
                object_name = #{objectName,jdbcType=VARCHAR},
            </if>
            <if test="contentType != null">
                content_type = #{contentType,jdbcType=VARCHAR},
            </if>
            <if test="createTime != null">
                create_time = #{createTime,jdbcType=TIMESTAMP},
            </if>
            <if test="status != null">
                `status` = #{status,jdbcType=CHAR},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
        delete
        from webwork_file
        where 
        id = #{id,jdbcType=INTEGER}
    </delete>

    <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from webwork_file
        where id = #{id,jdbcType=INTEGER}
    </select>

    <select id="listByFileGroupKey" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from webwork_file
        where 
         status = 1
         and
         file_group = #{fileGroup,jdbcType=VARCHAR}
         and
         file_group_key = #{fileGroupKey,jdbcType=VARCHAR}
    </select>
    
    <select id="selectByObjectName" resultMap="BaseResultMap">
    	select
          <include refid="Base_Column_List"/>
        from 
          webwork_file
        where 
          object_name = #{objectName,jdbcType=VARCHAR}
    </select>
</mapper>