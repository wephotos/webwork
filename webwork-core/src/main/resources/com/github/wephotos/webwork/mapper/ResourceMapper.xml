<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.github.wephotos.webwork.mapper.ResourceMapper">
    <!-- 查询最大的code -->
    <select id="findMaxCode" resultType="java.lang.String" parameterType="java.lang.String">
        SELECT LPAD(IFNULL(MAX(CAST(SUBSTR(CODE, -3) AS SIGNED) + 1), 1), 3, 0) MAX_CODE
        FROM sys_resource
        WHERE
        <choose>
            <when test="parentId == null">
                parent_id IS NULL
            </when>
            <otherwise>
                parent_id = #{parentId,jdbcType=CHAR}
            </otherwise>
        </choose>
    </select>
</mapper>